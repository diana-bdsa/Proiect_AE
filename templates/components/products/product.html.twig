<div class="card shadow-sm product">
    <div class="card-img-top">
        <img width="75" height="30%" src="/images/products/{{ product.imagePath }}" alt="{{ product.name }}">
    </div>
    <div class="card-body">
        <h2 class="card-text product-name">{{ product.name}}</h2>
        <p class="card-text">{{ product.description | raw}}</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-primary add-to-cart" data-product-id="{{ product.id }}">Adauga</button>
                <span>&nbsp;</span>
                <input class="form-group quantity" name="productQuantity" type="number" min="1" max="10" value="1"/>
            </div>
            <small class="text-body-secondary"><span class="product-price">{{product.price | number_format(2, '.', ',')}}</span> Lei</small>
        </div>
    </div>
</div>